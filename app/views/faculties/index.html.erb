<h1>Listing faculties</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @faculties.each do |faculty| %>
  <tr>
    <td><%= faculty.name %></td>
    <td><%= link_to 'Show', [faculty.university, faculty] %></td>
    <td><%= link_to 'Edit', edit_university_faculty_path(faculty.university, faculty) %></td>
    <td><%= link_to 'Destroy', [faculty.university, faculty], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

